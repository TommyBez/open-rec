{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Open Rec",
  "version": "0.1.0",
  "identifier": "com.tommaso.open-rec",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Open Rec",
        "width": 380,
        "height": 420,
        "resizable": true,
        "minWidth": 320,
        "minHeight": 380,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$APPDATA/recordings/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "fileAssociations": [
      {
        "ext": ["openrec"],
        "name": "OpenRec Project",
        "description": "OpenRec editable recording project",
        "role": "Editor",
        "mimeType": "application/x-openrec-project",
        "contentTypes": ["com.tommaso.open-rec.project"],
        "rank": "Owner",
        "exportedType": {
          "identifier": "com.tommaso.open-rec.project",
          "conformsTo": ["public.json", "public.data"]
        }
      }
    ],
    "macOS": {
      "minimumSystemVersion": "15.0",
      "entitlements": "./Entitlements.plist",
      "signingIdentity": null,
      "dmg": {
        "background": "icons/icon.png",
        "windowSize": {
          "width": 720,
          "height": 420
        },
        "appPosition": {
          "x": 190,
          "y": 190
        },
        "applicationFolderPosition": {
          "x": 530,
          "y": 190
        }
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
